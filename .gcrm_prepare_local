# clone github
cd /home/eric/
rm -rf Anime-Face-GAN-Keras
git clone https://github.com/ericguillaume/Anime-Face-GAN-Keras.git
cd Anime-Face-GAN-Keras
git checkout lana   #DEBUG !!!!!! etait debug_remote

# load data
rm -rf /home/eric/dev/data/images_lana+rhoades_2.txt_resized
mkdir -p /home/eric/dev/data
cd /home/eric/dev/data
tar -xzvf /tmp/images_lana+rhoades_2.txt_resized.tar.gz

# install requirements
cd /home/eric/Anime-Face-GAN-Keras
sudo apt-get -y install python3-venv
python3 -m venv env
source env/bin/activate
pip3 install -r requirements.txt
pip3 install git+https://www.github.com/keras-team/keras-contrib.git

# execute
source env/bin/activate
export LANA_GAN_DATA_DIR="/home/eric/dev/data/images_lana+rhoades_2.txt_resized"
cd /home/eric/Anime-Face-GAN-Keras
python3 GAN_Trainingv3.py
#python3 debug_remote.py
